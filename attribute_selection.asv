function [ best_attrib ] = attribute_selection( X, attributeY )
    
    infoD = entropy(Y)
    
    qt_attrib = size(X,2);
    best_gain = 0;
    best_attrib = 0;
    
    for i=1:qt_attrib
        newInfo = info(X(:,i),Y);
        
        gain = infoD - newInfo
        
        if gain > best_gain
           best_gain = gain;
           best_attrib = i;
        end
    end
end

